@model List<Armadillo>
@using (Html.BeginForm())
{
<div class="form-group">
    <label for="SearchText" class="control-label">Search for Armadillo</label>
    <input type="text" id="SearchText" name="SearchText" class="form-control" />
</div>
    
    <button type="submit" class="btn btn-default">Search</button>
}
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Shell Hardness</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var armadillo in Model)
        {
            <tr>
                <td>@armadillo.ID</td>
                <td>@armadillo.Name</td>
                <td>@armadillo.ShellHardness</td>
            </tr>
        }
    </tbody>
</table>
