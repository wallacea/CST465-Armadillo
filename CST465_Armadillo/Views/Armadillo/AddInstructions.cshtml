@model List<string>
<div>Single Edit</div>
<ul>
    @foreach (var item in Model)
    {
    <li>@item</li>
    }
    </ul>
    <form asp-action="SaveInstruction" asp-controller="Armadillo" method="post">
        <input type="text" name="Instruction" />
        <button type="submit">Save Item</button>
    </form>
    <div>Multi-Edit</div>
    <form asp-action="AddInstructions" asp-controller="Armadillo" method="post">
        @for (int i = 0; i < Model.Count; i++)
        {
            <input type="text" class="form-control" asp-for="@Model[i]" />
        }
        <input type="text" name="[@(Model.Count)]"/>
        <button type="submit">Save Item</button>
    </form>
