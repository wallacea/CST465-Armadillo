@model ArmadilloModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create an Armadillo</h2>

<form method="post" asp-action="TagHelperCreate" asp-controller="Armadillo">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age" class="control-label"></label>
        <input type="text" asp-for="Age" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ShellHardness" class="control-label"></label>
        <input type="text" asp-for="ShellHardness" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label">
            <input type="checkbox" asp-for="IsPainted" class="form-control" />
        </label>
    </div>
    <div class="form-group">
        <label asp-for="Homeland" class="control-label"></label>
        <select asp-for="Homeland" asp-items="@(new SelectList(ArmadilloModel.PossibleHomelands, "Value", "Text", ArmadilloModel.PossibleHomelands.Where(p => p.Text == "Mexico").FirstOrDefault()?.Value))" class="form-control">
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save Armadillo</button>
</form>
