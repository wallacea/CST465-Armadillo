@model ArmadilloModel

<tr>
    <td class="form-group">
        <input asp-for="ID" type="hidden" />
        <input asp-for="Name" type="text" class="form-control" />
        <span asp-validation-for="Name"></span>
    </td>
    <td class="form-group">
        <input asp-for="Age" type="number" class="form-control" />
        <span asp-validation-for="Age"></span>
    </td>
    <td class="form-group">
        <input asp-for="ShellHardness" type="number" class="form-control" />
        <span asp-validation-for="ShellHardness"></span>
    </td>
    <td >
        <div class="form-check">
            <input type="checkbox" asp-for="IsPainted" class="form-check-input" />
        </div>
    </td>
    <td class="form-group">
        <select asp-for="Homeland" asp-items="ArmadilloModel.PossibleHomelands" class="form-control"></select>
    </td>
</tr>