@model Armadillo
@{
    ViewData["Title"] = "Create";
}

<h2>Create an Armadillo</h2>

@using (Html.BeginForm("Create", "Armadillo"))
{
<div class="form-group">
    @Html.LabelFor(m => m.Name, new {@class ="control-label", school = "iscool" })
    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })]
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Age)
    @Html.TextBoxFor(m => m.Age)
</div>
    <button type="submit">Save Armadillo</button>
}
